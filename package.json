{
  "name": "py-clangd-client",
  "displayName": "pyclangd",
  "description": "the vscode python clang",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:h",
    "onLanguage:hpp",
    "onCommand:pyclangd.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyclangd.helloWorld",
        "title": "Hello World"
      }
    ],
"configuration": {
  "title": "PyClangd",
  "properties": {
    "pyclangd.libraryPath": {
      "type": "string",
      "default": "",
      "description": "libclang 库目录路径。"
    },
    "pyclangd.trace.server": {
      "type": "string",
      "enum": [
        "off",
        "messages",
        "verbose"
      ],
      "default": "off",
      "description": "追踪 PyClangd 服务器和 VS Code 之间的通信消息。"
    }
  }
}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}