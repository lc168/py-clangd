{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "手动调试 PyClangd",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
            // 注意：这里删除了 preLaunchTask，防止它在后台偷偷编译导致 SSH 卡死
        }
    ]
}